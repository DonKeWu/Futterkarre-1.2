/* Ultra-Dunkel Theme v2 - Nur Farben, KEINE Font-Überschreibungen */
QWidget {
    background-color: #1f1f1f;
    color: #cccccc;
}

/* Header-Bereiche - NUR für echte Header */
QLabel[objectName*="header"], QLabel[objectName*="lbl_header"] {
    background-color: #3a3a3a;
    color: #cccccc;
    padding: 10px;
}

/* Buttons - Nur Background, keine Effekte */
QPushButton {
    background-color: #4a4a4a;
    color: #cccccc;
    padding: 10px;
    border: none;
}

/* Input-Felder - Minimale Rahmen */
QLineEdit, QComboBox {
    background-color: #3a3a3a;
    border: 1px solid #6a6a6a;
    padding: 8px;
    color: #cccccc;
}

QComboBox:drop-down {
    border: none;
}

QComboBox QAbstractItemView {
    background-color: #3a3a3a;
    color: #cccccc;
    selection-background-color: #6a6a6a;
    border: 1px solid #6a6a6a;
}

/* Slider - Sauber ohne Rahmen */
QSlider::groove:horizontal {
    background-color: #3a3a3a;
    height: 8px;
}

QSlider::handle:horizontal {
    background-color: #6a6a6a;
    width: 20px;
    height: 20px;
    margin: -6px 0;
}

QSlider::sub-page:horizontal {
    background-color: #cccccc;
}

/* Tabellen - Nur bei Bedarf */
QTableWidget {
    background-color: #3a3a3a;
    gridline-color: #6a6a6a;
    border: 1px solid #6a6a6a;
    color: #cccccc;
}

QTableWidget::item {
    padding: 8px;
    border-bottom: 1px solid #333;
}

QTableWidget::item:selected {
    background-color: #6a6a6a;
    color: white;
}

/* Frames - NUR minimal für Vorschau-Bereiche */
QFrame[objectName*="vorschau"] {
    border: 1px solid #6a6a6a;
    background-color: #1f1f1f;
}

/* Alle anderen Frames OHNE Rahmen */
QFrame {
    background-color: #1f1f1f;
    border: none;
}

/* CheckBoxes - Sauber */
QCheckBox {
    color: #cccccc;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 1px solid #6a6a6a;
    background-color: #3a3a3a;
}

QCheckBox::indicator:checked {
    background-color: #6a6a6a;
}

/* FÜTTERUNGSSEITE - Spezielle Elemente */
QLabel#b_heu_fuetterung {
    background-color: #1f1f1f !important;  /* Ultra-Dunkel Theme Background-Farbe */
    color: #cccccc !important;
}

/* Spezielle Buttons auf Fütterungsseite - GLEICHES DUNKLES GRAU wie normale Buttons */
QPushButton#btn_h_extra {
    background-color: #4a4a4a !important;  /* DUNKLES GRAU wie normale Buttons */
    color: #cccccc !important;  /* Heller Text wie bei normalen Buttons */
    border: none !important;
}

QPushButton#btn_h_reload {
    background-color: #4a4a4a !important;  /* DUNKLES GRAU wie normale Buttons */
    color: #cccccc !important;  /* Heller Text wie bei normalen Buttons */
    border: none !important;
}

QPushButton#btn_next_rgv {
    background-color: #4a4a4a !important;  /* DUNKLES GRAU wie normale Buttons */
    color: #cccccc !important;  /* Heller Text wie bei normalen Buttons */
    border: none !important;
}

QLabel[objectName*="text"], QLabel[objectName^="txt_"] {
    color: #cccccc;
}

QLabel[objectName*="zahl"], QLabel[objectName*="gewicht"], QLabel[objectName*="kg"] {
    color: #cccccc;
}

/* Nährwert-Labels auf Füttern-Seite - HELLGRAU */
QLabel[objectName^="label_h_"] {
    color: #cccccc !important;
}

/* Scrollbars - Dezent */
QScrollBar:vertical {
    background-color: #3a3a3a;
    width: 16px;
}

QScrollBar::handle:vertical {
    background-color: #6a6a6a;
}

QScrollBar::handle:vertical:hover {
    background-color: #cccccc;
}

/* Spezielle Gewichts-Labels für bessere Lesbarkeit */
QLabel[objectName*="gewicht"] {
    color: #cccccc;
}

/* Status-Bereiche - Nur bei expliziten Status-Labels */
QLabel[objectName*="status"] {
    background-color: #4a4a4a;
    color: #cccccc;
    padding: 5px;
}